{
    "manifest_version": 3,
    "name": "Facebook Hashtag Counter",
    "version": "1.0",
    "description": "Counts the number of posts using a specific hashtag on Facebook.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["*://*.facebook.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  