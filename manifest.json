{
  "manifest_version": 3,
  "name": "Hashtag Counter",
  "version": "1.0",
  "description": "Counts the number of posts with a specific hashtag.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
